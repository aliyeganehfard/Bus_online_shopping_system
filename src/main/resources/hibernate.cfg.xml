<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">ali.1381</property>

        <property name="hibernate.hbm2ddl.auto">update</property> <!-- Generates Database Schema. Do not Use In PRODUCTION! -->
        <property name="show_sql">true</property>

        <property name="hibernate.current_session_context_class">thread</property>

        <mapping class="com.example.bus_online_shopping_system.model.entity.User" />
        <mapping class="com.example.bus_online_shopping_system.model.entity.Ticket" />
        <mapping class="com.example.bus_online_shopping_system.model.entity.Order" />
    </session-factory>
</hibernate-configuration>